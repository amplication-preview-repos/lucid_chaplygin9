datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  address   String?
  courses   Course[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String?
  phone     String?
  teachers  Teacher[]
  updatedAt DateTime  @updatedAt
}

model Teacher {
  courses    Course[]
  createdAt  DateTime  @default(now())
  email      String?
  firstName  String?
  id         String    @id @default(cuid())
  lastName   String?
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  phone      String?
  updatedAt  DateTime  @updatedAt
}

model Student {
  courses   Course[]
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  phone     String?
  updatedAt DateTime @updatedAt
}

model SingingStyle {
  courses     Course[]
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model Course {
  createdAt      DateTime      @default(now())
  description    String?
  endDate        DateTime?
  id             String        @id @default(cuid())
  location       Location?     @relation(fields: [locationId], references: [id])
  locationId     String?
  singingStyle   SingingStyle? @relation(fields: [singingStyleId], references: [id])
  singingStyleId String?
  startDate      DateTime?
  student        Student?      @relation(fields: [studentId], references: [id])
  studentId      String?
  teacher        Teacher?      @relation(fields: [teacherId], references: [id])
  teacherId      String?
  title          String?
  updatedAt      DateTime      @updatedAt
}
